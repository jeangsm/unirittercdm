<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:id="@+id/imageView"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" android:layout_marginTop="32dp"
            android:layout_alignParentLeft="true" android:layout_alignParentRight="true"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="32dp" app:srcCompat="@drawable/home" android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitStart"/>
    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bem vindo!!!"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_alignParentLeft="true" android:layout_alignParentRight="true"
            android:layout_above="@id/button" android:layout_marginBottom="46dp" android:layout_marginLeft="3dp"
            android:layout_marginRight="13dp" android:layout_alignParentStart="false"
            android:layout_alignParentEnd="false" android:gravity="center"/>
    <Button
            android:text="Entrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginBottom="28dp"
            android:layout_marginTop="8dp"
            android:onClick="entrarButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" android:layout_alignParentRight="true"/>

</RelativeLayout>